  <HediffDef>
    <defName>Anneli_Music_Intense</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>inspired by intense music</label>
    <labelNoun>intense music</labelNoun>
    <description>Increase overall performance.</description>
    <defaultLabelColor>(244,67,54)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
    <makesAlert>false</makesAlert>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-8.0</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
