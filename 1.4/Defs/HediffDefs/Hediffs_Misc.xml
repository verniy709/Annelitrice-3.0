<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="InjuryBase">
    <defName>Anneli_Regeneration</defName>
    <label>regeneration</label>
    <labelNoun>regeneration</labelNoun>
    <description>regeneration.</description>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <labelTendedWell>bandaged</labelTendedWell>
        <labelTendedWellInner>sutured</labelTendedWellInner>
        <labelSolidTendedWell>set</labelSolidTendedWell>
      </li>
    </comps>
    <injuryProps>
      <painPerSeverity>0.0125</painPerSeverity>
      <bleedRate>0.06</bleedRate>
      <canMerge>false</canMerge>
      <destroyedLabel>Destroyed</destroyedLabel>
    </injuryProps>
  </HediffDef>


  <HediffDef ParentName="DiseaseBase">
    <defName>Anneli_Infection</defName>
    <label>infestation</label>
    <labelNoun>infestation</labelNoun>
    <hediffClass>HediffWithComps</hediffClass>
    <description>Amidst the vast expanse of the universe, I am attuned to the gentle melody that reverberates through its infinite expanse. Though my mortal form may be withering away, I am not overwhelmed by sorrow.\n\nTranslation: the patient is a host of Annelitrice.</description>
    <makesSickThought>true</makesSickThought>
    <tendable>true</tendable>
    <minSeverity>0.001</minSeverity>
    <initialSeverity>0.001</initialSeverity>
    <stages>
      <li>
        <label>Early-stage</label>
        <becomeVisible>true</becomeVisible>
        <vomitMtbDays>4.0</vomitMtbDays>
        <painOffset>0.02</painOffset>
        <hungerRateFactorOffset>1</hungerRateFactorOffset>
      </li>
      <li>
        <label>Middle-stage</label>
        <minSeverity>0.333</minSeverity>
        <vomitMtbDays>3.5</vomitMtbDays>
        <painOffset>0.02</painOffset>
        <hungerRateFactorOffset>0.7</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Late-stage</label>
        <minSeverity>0.666</minSeverity>
        <vomitMtbDays>2.5</vomitMtbDays>
        <painOffset>0.02</painOffset>
        <hungerRateFactorOffset>0.4</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-1.00</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Final-stage</label>
        <minSeverity>0.90</minSeverity>
        <vomitMtbDays>1.5</vomitMtbDays>
        <painOffset>0.02</painOffset>
        <hungerRateFactorOffset>0.1</hungerRateFactorOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-2.50</offset>
          </li>
        </capMods>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.2</severityPerDay>
      </li>
      <li Class="HediffCompProperties_TendDuration">
        <severityPerDayTended>-1</severityPerDayTended>
        <baseTendDurationHours>24</baseTendDurationHours>
      </li>
    </comps>
  </HediffDef>

  <RecipeDef ParentName="SurgeryFlesh">
    <defName>CureAnneli_Infection</defName>
    <label>cure anneli infection</label>
    <description>This smedical operation cures anneli infection.</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <jobString>Curing Anneli_Infection.</jobString>
    <workAmount>1000</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
    <isViolation>false</isViolation>
    <targetsBodyPart>false</targetsBodyPart>
    <removesHediff>Anneli_Infection</removesHediff>
    <successfullyRemovedHediffMessage>{0} has successfully cured {1}'s anneli infection.</successfullyRemovedHediffMessage>
    <skillRequirements>
      <Medicine>5</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineHerbal</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>
</Defs>


