  <soundWorking>Recipe_Cremate</soundWorking>
  <autoStripCorpses>false</autoStripCorpses>
  <uiIconThing>Anneli_OutsiderEgg</uiIconThing>
  <ingredients>
    <li>
      <filter>
        <thingDefs>
          <li>Anneli_OutsiderEgg</li>
          <li>Anneli_ColonistEgg</li>
        </thingDefs>
      </filter>
      <count>1</count>
    </li>
  </ingredients>
  <fixedIngredientFilter>
